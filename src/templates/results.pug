.results.padded

  .no-content(ng-if="photos.length === 0 && !error && !loading") Search to see some results

  .no-content(ng-if="error") {{ error }}

  .loading(ng-if="loading") Loading...

  .photo(ng-repeat="photo in photos | limitTo:20")
    img.img-responsive(ng-src="{{photo.img_src}}")
    .well
      h4
        a.btn.pull-right(ng-click="save(photo)" ng-class="{ 'btn-success': photo.saved, 'btn-default': '!photo.saved' }")
          i.fa.fa-check(ng-if="photo.saved")
          i.fa.fa-save(ng-if="!photo.saved")
          |  {{ photo.saved ? 'Saved' : 'Save' }}
        | {{ photo.rover.name }}
      div {{ photo.earth_date }}
      div {{ photo.camera.name }} ({{ photo.camera.full_name }})

    pre.well(ng-if="photo.showRaw") {{ photo | json }}
